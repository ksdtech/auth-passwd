%h2 Log In for Protected Resources
-if @errors
  %p= @errors
%form{:method => 'post'}
  %input{:type => 'hidden', :name => 'url', :value => @url}
  %p
    %label{:for => 'login'} User Name
    %br
    %input{:type => 'text', :name => 'login', :id => 'login', :length => '30', :value => @login}
  %p
    %label{:for => 'password'} Password
    %br
    %input{:type => 'password', :name => 'password', :id => 'password', :length => '30', :value => ''}
  %p
    %input{:type => 'submit', :name => 'submit', :value => 'Log In'}

